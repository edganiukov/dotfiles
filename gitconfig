[core]
    excludesfile = ~/.gitignore

[user]
    name = <Name>
    email = <Email>
    signingkey = <Key ID>

[commit]
    gpgsign = true

[gpg]
    program = gpg2

[push]
    default = simple

[pull]
    default = simple
    rebase = true

[color "branch"]
    current = green
    remote = yellow

[alias]
    fap = fetch --all --prune
    lg = log --pretty=oneline --abbrev-commit
    ps = push
    pl = pull
    co = checkout
    cb = checkout -b
    cm = commit
    st = status
