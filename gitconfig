    excludesfile = ~/.gitignore
[user]
    name = <Name>
    email = <Email>
    signingkey = <Key ID>
[commit]
    gpgsign = true
[push]
    default = simple
[http "https://gopkg.in"]
    followRedirects = true
[url "git@github.com:"]
    insteadOf = https://github.com/
[alias]
    co = checkout
    br = branch
    cm = commit
    st = status
