# finds out, if available)
bar {
    position top
    workspace_buttons yes
    strip_workspace_numbers yes
    tray_output primary

    # status_command i3status -c ~/.config/i3/i3status.conf
    status_command python ~/.config/i3/i3status.py

    colors {
        separator           #928374
        background          #282828
        statusline          #EBDBB2
        focused_workspace   #1D2021 #1D2021 #81A2BE
        active_workspace    #1D2021 #1D2021 #928374
        inactive_workspace  #32302F #32302F #928374
        urgent_workspace    #32302F #32302F #F79494
