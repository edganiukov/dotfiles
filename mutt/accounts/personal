# vim: ft=muttrc
#
# FastMail account
set my_user = `echo "ZWRAZ25rdi5pbwo=" | base64 -d `
set my_realname = "Eduard Ganiukov"
set realname = $my_realname
set from = "$my_realname <$my_user>"
set my_smtp_pass = `gopass show -f core/smtp.fastmail.com`

set smtp_url = "smtps://$my_user@smtp.fastmail.com:465"
set smtp_pass = $my_smtp_pass

set mbox_type=Maildir
set folder="~/.mail/personal"
set spoolfile = "=Inbox"
set record = "=Sent"
set postponed = "=Drafts"
mailboxes =Inbox =Archive =Archive/Dev =Archive/Important =Archive/Purchases =Drafts =Sent =Trash

bind index,pager g noop
macro index,pager e "<save-message>=Archive<enter>" "Archive message"
macro index,pager t "<save-message>=Trash<enter>" "Move message to Trash"
macro index,pager gi "<change-folder>=<enter>" "Go to inbox"
