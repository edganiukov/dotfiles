# Increase volume 5% with Apple volume up
"pactl set-sink-volume @DEFAULT_SINK@ +5%"
    XF86AudioRaiseVolume

# Decrease volume 5% with Apple volume down
"pactl set-sink-volume @DEFAULT_SINK@ -5%"
    XF86AudioLowerVolume

# Mute with Mod4+m.
"pactl set-sink-mute @DEFAULT_SINK@ toggle"
    Mod4+0

# Increase volume 5% with Mod4+Up
"pactl set-sink-volume @DEFAULT_SINK@ +5%"
    Mod4+Up

# Decrease volume 5% with Mod4+Down.
"pactl set-sink-volume @DEFAULT_SINK@ -5%"
    Mod4+Down

# Mute with Apple mute
"pactl set-sink-mute @DEFAULT_SINK@ toggle"
    XF86AudioMute

# XRandr
"autorandr -c internal"
    XF86LaunchA

"autorandr -c external"
    XF86LaunchB

# Brighten screen
"brightnessctl set 5%+"
    XF86MonBrightnessUp

# Dim screen
"brightnessctl set 5%-"
    XF86MonBrightnessDown

"st"
    Mod4+Return

"dmenu-run-recent"
    Mod4+r

"dmenu-pass"
    Mod4+p

"xset s activate"
    Mod4+Shift+s
