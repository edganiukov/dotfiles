# Increase volume 5% with Apple volume up
"pactl set-sink-volume @DEFAULT_SINK@ +5%"
    XF86AudioRaiseVolume

# Decrease volume 5% with Apple volume down
"pactl set-sink-volume @DEFAULT_SINK@ -5%"
    XF86AudioLowerVolume

# Mute with Mod4+m.
"pactl set-sink-mute @DEFAULT_SINK@ toggle"
    Mod4+0

# Increase volume 5% with Mod4+Up
"pactl set-sink-volume @DEFAULT_SINK@ +5%"
    Mod4+Up

# Decrease volume 5% with Mod4+Down.
"pactl set-sink-volume @DEFAULT_SINK@ -5%"
    Mod4+Down

# Mute with Apple mute
"pactl set-sink-mute @DEFAULT_SINK@ toggle"
    XF86AudioMute

# XRandr
"autorandr -c internal"
    XF86LaunchA

"autorandr -c external"
    XF86LaunchB

# Brighten screen
"brightnessctl --device=acpi_video0 set 5%+"
    XF86MonBrightnessUp

# Dim screen
"brightnessctl --device=acpi_video0 set 5%-"
    XF86MonBrightnessDown

# Brighten keyboard
"brightnessctl --device=smc::kbd_backlight set 5%+"
    XF86KbdBrightnessUp

# Dim keyboard
"brightnessctl --device=smc::kbd_backlight set 5%+"
    XF86KbdBrightnessDown

"st"
    Mod4+Return

"dmenu-run-recent"
    Mod4+r

"dmenu-pass"
    Mod4+p

"i3lock -n -c 282828 --keylayout 0"
    Mod4+Shift+s
