# Increase volume 5% with Apple volume up
"amixer set Master 5%+"
    XF86AudioRaiseVolume

# Decrease volume 5% with Apple volume down
"amixer set Master 5%-"
    XF86AudioLowerVolume

# Mute with Mod4+m.
"amixer set Master toggle"
    Mod1+m

# Increase volume 5% with Mod4+Up
"amixer set Master 5%+"
    Mod1+Up

# Decrease volume 5% with Mod4+Down.
"amixer set Master 5%-"
    Mod1+Down

# Mute with Apple mute
"amixer set Master toggle"
    XF86AudioMute

# Suspend system
"systemctl suspend"
    Mod4 + XF86Eject

# XRandr
"autorandr -c internal"
    XF86LaunchA

"autorandr -c external"
    XF86LaunchB

# Brighten screen
"brightnessctl --device=acpi_video0 set 5%+"
    XF86MonBrightnessUp

# Dim screen
"brightnessctl --device=acpi_video0 set 5%-"
    XF86MonBrightnessDown

# Brighten keyboard
"brightnessctl --device=smc::kbd_backlight set 5%+"
    XF86KbdBrightnessUp

# Dim keyboard
"brightnessctl --device=smc::kbd_backlight set 5%+"
    XF86KbdBrightnessDown
